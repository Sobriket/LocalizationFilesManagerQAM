<Window x:Class="LocalizationFilesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalizationFilesManager"
        mc:Ignorable="d"
        Title="Localization Files Manager" Height="400" Width="600">
    <Grid>
        <Menu VerticalAlignment="Top" Height="22">
            <Button Content="File" Click="Button_Click"/>
            <Button Content="Edit" Click="Button_Edit"/>
        </Menu>
        <DataGrid Name="dataGrid" Margin="0,22,0,0" VerticalAlignment="Top" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" MinWidth="80" Width = "*" CanUserReorder="False" />
                <DataGridTextColumn Header="EN" MinWidth="80" Width = "*"/>
                <DataGridTextColumn Header="FR" MinWidth="80" Width = "*"/>
                <DataGridTextColumn Header="ES" MinWidth="80" Width = "*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
